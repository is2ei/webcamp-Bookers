<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to 'Show', book_path(book.id) %></td>
                <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
                <td><%= link_to 'Destroy', book_path(book.id), method: :delete, remote: :true %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book, url: books_path, local: true do |f| %>
    <% if @book.errors.any? %>
        <div>
            <h2><%= @book.errors.size %> errors prohibited this book from being saved:</h2>
            <ul>
                <% @book.errors.full_messages.each do |msg| %>
                    <li><%= msg %>
                <% end %>
            </uL>
        </div>
    <% end %>
    <div class="field">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :body, 'Body' %>
        <%= f.text_field :body %>
    </div>
    <div class="actions">
        <%= submit_tag('Create Book') %>
    </div>
<% end %>
